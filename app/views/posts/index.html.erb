<% meta :title => "My title",
:description => "The Jump Start Rails App",
:keywords => %w(rails ruby on rails Rails)
%>
        <div class="hero-unit">
          <h2>Latest post: <%= @latest.title %></h2>
          <p><%= @latest.blurb %></p>
          <p>
            <%= link_to 'Read Post', {controller: 'posts', action: 'show', id: @latest.id }, :class => "btn btn-primary btn-large" %>
          </p>
        </div><!-- end of hero-unit -->
        
        <h1>Posts</h1>
<table class="table table-bordered">
  <% @posts.each do |post| %>
    <tr>
      <td style="width:100px;"><%= image_tag post.image_url(:thumb).to_s %></td>
      <td>
        <div>
          <strong><%= post.title %></strong><br />
          <p class="blurb_target">
            <a href="#">Show/hide blurb</a>
          </p>
        </div>
        <p class="blurb_content"><%= post.blurb %></p>
        <%= link_to 'Read Post', {controller: 'posts', action: 'show', id: post.id } %>
      </td>
    </tr>
  <% end %>
</table>
